<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblue"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:text="@string/title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="@string/date_caption"/>

        <Spinner
            android:id="@+id/date"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@color/turquoise"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="@string/type_caption"/>

        <Spinner
            android:id="@+id/type"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@color/turquoise"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="@string/amount_caption"/>

        <EditText
            android:id="@+id/amount"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:inputType="numberDecimal|numberSigned"
            android:textColor="@color/black"
            android:background="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:text="@string/desc_caption"/>

        <EditText
            android:id="@+id/desc"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/black"
            android:background="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="@string/save_button"
        android:onClick="saveData"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="@string/view_graph_button"
        android:onClick="viewGraph"/>
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/asaswain/Downloads/AUG1/ParseStarterProject/res/layout/activity_add_entry.xml -->